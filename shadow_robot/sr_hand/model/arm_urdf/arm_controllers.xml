<?xml version="1.0"?>

<controllers>

  <controller name="arm_controller" type="ArmDynamicsControllerNode">
    <listen_topic name="sr_arm_commands" />
    <kinematics>
      <elem key="kdl_chain_name">sr_arm</elem>
    </kinematics>
    <map name="controller_param">
      <elem key="kdl_chain_name">sr_arm</elem>
    </map>
    <controller name="trunk_rotation_controller" topic="trunk_rotation_controller" type="JointEffortController">
      <joint name="trunk_rotation" >
        <pid p="500" d="2" i="0.1" iClamp="20" />
      </joint>
    </controller>
    <controller name="shoulder_rotation_controller" topic="shoulder_rotation_controller" type="JointEffortController">
      <joint name="shoulder_rotation" >
        <pid p="300" d="2" i="0.1" iClamp="20" />
      </joint>
    </controller>
    <controller name="elbow_abduction_controller" topic="elbow_abduction_controller" type="JointEffortController">
      <joint name="elbow_abduction" >
        <pid p="200" d="2" i="0.1" iClamp="20" />
      </joint>
    </controller>
    <controller name="forearm_rotation_controller" topic="forearm_rotation_controller" type="JointEffortController">
      <joint name="forearm_rotation" >
        <pid p="100" d="2" i="0.1" iClamp="20" />
      </joint>
    </controller>
  </controller>
</controllers>