
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="shadowarm_trunk" params="parent">

    <link name="shadowarm_trunk">
	<inertial>
	  <origin xyz="0 0 0.27025" rpy="0 0 0" />
	  <mass value="5" />
	  <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
	</inertial>
	<visual>
	  <origin xyz="0 0 0.0165" rpy="${M_PI/2} ${M_PI} ${M_PI/2}" />
	  <geometry name="shadowarm_trunk_visual">
	    <mesh filename="package://sr_hand/model/meshes/arm/arm_trunk.mesh" scale="0.001 0.001 0.001" />
	  </geometry>
	  <material name="Grey" />
	</visual>
	<collision>
	  <origin xyz="0 0 0.27025" rpy="0 0 0"/>
	  <geometry name="shadowarm_trunk_collision">
	    <box size="0.03 0.03 0.5405"/>
	  </geometry>
	</collision>
      </link>
      <gazebo reference="shadowarm_trunk">
	<material>Gazebo/Grey</material>
	<selfCollide>true</selfCollide>
      </gazebo>

    <joint name="trunk_rotation" type="revolute">
      <parent link="${parent}"/>
      <child link="shadowarm_trunk"/>   
      <origin xyz="0 0 0.01" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="-${M_PI/2}" upper="${M_PI/4}"
      effort="10" velocity="1.0"/>
    </joint>

  </xacro:macro>

</robot>