<launch>
  <!-- start the arm and hand -->
  <include file="$(find sr_hand)/launch/sr_arm_motor.launch"/>

  <!-- test the publish rates -->
  <test test-name="hztest_sr_hand_and_arm_motor_1" pkg="sr_tests" type="hztest.py" time-limit="50" name="hztest_sr_hand_and_arm_motor_1">
  </test>

  <!-- test the publish rates for the arm -->
  <test test-name="hztest_sr_hand_and_arm_motor_2" pkg="sr_tests" type="hztest.py" time-limit="50" name="hztest_sr_hand_and_arm_motor_2">
    <param name="topic" value="/sr_arm/shadowhand_data"/>
    <param name="publish_topic" value="/sr_arm/sendupdate"/>
  </test>
</launch>